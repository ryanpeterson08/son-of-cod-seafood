@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SonOfCod.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
<form method="post" asp-action="Register" asp-controller="Account" enctype="multipart/form-data">
 
    <label for="email">Email: </label>
    <input type="text" id="email" required name="email" />

    <label for="picture">Profile Picture: </label>
    <input type="file" id="picture" name="picture" class="btn blue darken-4"/><br />

    <label for="password">Password: </label>
    <input type="password" id="password" required name="password" />

    @*<label for="passwordconfirm">Confirm Password: </label>
        <input type="password" id="passwordconfirm" required name="passwordconfirm" />*@
    <input type="submit" value="Register" class="btn blue darken-4"/>
</form>
